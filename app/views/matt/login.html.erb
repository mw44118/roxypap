<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">

<html>

<head>

<title>Login</title>

</head>

<body>

<h1>Login</h1>

<form action="/login" method="post">

    <%= token_tag %>

    <label>
        <input type="text" name="login" />
        <span>ID</span>
    </label>

    <label>
        <input type="text" name="password" />
        <span>Password</span>
    </label>

    <input type="submit" value="Login" />

</form>

</body>

</html>
